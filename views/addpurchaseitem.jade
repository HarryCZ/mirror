extends layout

block scripts
	script.
		storageItems = "#{storageItems}";
	script(type='text/javascript' src='/js/purchaseItemAdd.js')
	
block content
	h1=title
	table.purchase_items
		thead
			tr
				th
					mtl.
						item
				th
					mtl.
						amount
				th
					mtl.
						price
				th
					mtl.
						purchase
		tbody
			each item, i in items
				tr
					td.item_title
						#{item.storage_item}
					td.
						#{item.amount}
					td.
						#{item.price}
					td.
						#{item.purchase}
	.block
		h2 
			mtl.
				add_purchase_item
		form.addPurchItem(name="addpurchaseitem",method="post",action="/writedbpurchaseitem")
			select(type="text", placeholder="Polo≈æka", name="item", id="item")
				each sitem, i in storageIt
					option(value="#{sitem._id}") #{sitem.title}
					
			input(type="text", placeholder="amount", name="amount")
			input(type="text", placeholder="price", name="price")
			input(type="hidden", name="purchase" value="#{id}")
			button#btnSubmit(type="submit") add
	.block
		h2 
			mtl.
				confirm_purchase
		form.confirmPurch(name="confirmpurchase",method="post",action="/confirmpurchase")
			input(type="hidden", name="pid" value="#{id}")
			input(type="hidden", name="pdesc" value="#{title}")
			input(type="hidden", name="pdate" value="#{date}")
			input(type="hidden", name="psupplier" value="#{supplier}")
			input(type="hidden", name="ptreasury" value="#{treasury}")
			button#btnSubmit(type="submit") submit
	p.
		<br>
		<a href="/storage">Go Back</a>