extend layoutblock subnav	.subnav		ul			li <a href="/incomesSpending"><mtl>incomes_spending</mtl></a>block content	h1		mtl.			incomes_spending	table.treasury		thead			tr				th					mtl.						description				th					mtl.						date				th					mtl.						treasury				th					mtl.						amount		tbody			each incomesSpending, i in incomesSpendings				tr					td.						#{incomesSpending.description}					td.						#{incomesSpending.date}					td.						#{incomesSpending.treasury}					td.						#{incomesSpending.amount}block sidebar	.block		h1 			mtl.				add_income_spending		form.addIncomeSpending(name="addIncomeSpending",method="post",action="/addIncomeSpending")			input(type="text", placeholder="description", name="description")			input(type="text", placeholder="date", name="date")			select(type="text", placeholder="treasury", name="treasury", id="treasury")				each treasury, i in treasuries					option(value="#{treasury._id}") #{treasury.title}			input(type="text", placeholder="amount", name="amount")			button#btnSubmit(type="submit") submit