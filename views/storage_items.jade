extends layoutblock scripts	script.		units = "#{units}";	script(type='text/javascript' src='/js/storageAdd.js')block subnav	ul		li <a href="/units">Units</a>block content	h1=title	table.usertable		thead			tr				th.					Title				th.					Package				th.					Package unit				th.					Ration				th.					Ration unit				th.					Sell price				th.					Deleted		tbody			each item, i in storage_items				tr					td.						#{item.title}					td.						#{item.package}					td.						#{item.package_unit}					td.						#{item.ration}					td.						#{item.ration_unit}					td.						#{item.sell_price}					td.						#{item.deleted}							p.		<br>		<a href="/storage">Go Back</a>block sidebar	.block		h1 Add Storage item		form.addUser(name="additem",method="post",action="/addstorageitem")			input(type="text", placeholder="Title", name="title")			input(type="text", placeholder="Package", name="pack")			select(type="text", placeholder="Package unit", name="package_unit", id="package_unit")				each unit, i in uts					option(value="#{unit._id}") #{unit.title}			input(type="text", placeholder="Ration", name="ration")			select(type="text", placeholder="Ration unit", name="ration_unit", id="ration_unit")			input(type="text", placeholder="Sell price", name="sell_price")			button#btnSubmit(type="submit") submit