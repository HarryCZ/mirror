extends layoutblock subnav	.subnav		ul			li <a href="/storage_items">Položky skladu</a>			li <a href="/units">Jednotky</a>			block content	h1		mtl=title	table.unitstable		thead			tr				th					mtl.						title				th					mtl.						sign				th					mtl.						subunit				th					mtl.						subunit_sign				th					mtl.						conversion				th.					Deleted		tbody			each unit, i in units				tr					td.						#{unit.title}					td.						#{unit.sign}					td.						#{unit.subunit}					td.						#{unit.subunit_sign}					td.						#{unit.conversion}					td.						#{unit.deleted}							p.		<br>		<a href="/storage">Zpět</a>block sidebar	.block		h1 Přidat jednotku		form.addUnit(name="addunit",method="post",action="/addunit")			input(type="text", placeholder="title", name="title")			input(type="text", placeholder="sign", name="sign")			input(type="text", placeholder="subunit", name="subunit")			input(type="text", placeholder="subunit_sign", name="subunit_sign")			input(type="text", placeholder="conversion", name="conversion")			input(type="text", placeholder="deleted", name="deleted")			button#btnSubmit(type="submit") submit